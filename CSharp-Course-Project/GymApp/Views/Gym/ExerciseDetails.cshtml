@model ExerciseDetailsViewModel
@{
    ViewBag.Title = Model.CurrentExercise.Name;
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-lg-4">
            <img src="@Model.CurrentExercise.ImageUrl" alt="@Model.CurrentExercise.Name" style="width:100%;" class="img-fluid">
        </div>
        <div class="col-lg-8">
            <h3 style="margin-top: 50px;">@Model.CurrentExercise.Name</h3>
            <p class="font-weight-bold">Category: @Model.CurrentExercise.Category</p>
            <h4 class="mt-4">Benefits:</h4>
            <p>@Model.CurrentExercise.Benefit</p>

            <form class="input-group-sm text-lg-end" asp-controller="Gym" asp-action="AddToMyFavorites" asp-route-id="@Model.CurrentExercise.Id">
                <button type="submit" class="fs-6 btn btn-success mb-2 p-3 btn-success buy-button">Add to favorites</button>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-lg-12">
            <h4>Execution:</h4>
            <p class="description-text" style="font-size: 18px; margin-bottom: 30px;">@Model.CurrentExercise.Execution</p>
        </div>
    </div>
    <div class="col-lg-4">
        <h4>Other exercises:</h4>
    </div>
    <div class="row">
        @foreach (var randomProduct in Model.RandomExercises)
        {
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <a class="navbar-brand" asp-area="" asp-controller="Gym" asp-action="ExerciseDetails" asp-route-id="@randomProduct.Id">
                            <img src="@randomProduct.ImageUrl" alt="@randomProduct.Name" class="card-img-top" style="height: 200px; object-fit: cover; color:black; margin-bottom: 20px;">
                            <h4 class="card-title" style="color:black;">@randomProduct.Name</h4>
                            <p class="font-weight-bold" style="color:black;">Category: @Model.CurrentExercise.Category</p>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
