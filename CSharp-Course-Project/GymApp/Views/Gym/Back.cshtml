@model IEnumerable<ExerciseViewModel>
@{
    ViewBag.Title = "Back Exercises";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var exercise in Model)
    {
        @if (exercise.Category == "Back")
        {
            <div class="card col-4" style="width: 20rem; ">
                <img class="card-img-top" style="width: 18rem;"
                     src="@exercise.ImageUrl" alt="Book Image">
                <div class="card-body">

                    <h5 class="card-title mt-1">@exercise.Name</h5>
                    <p class="mb-0">Execution: @exercise.Execution</p>
                    <p class="mb-0">Benefits: @exercise.Benefit</p>
                    <p>Category: @exercise.Category</p>
                </div>

                @if (this.User.Identity!.IsAuthenticated)
                {
                    <form class="input-group-sm" asp-controller="Gym" asp-action="AddToMyFavorites" asp-route-id="@exercise.Id">
                        <input type="submit" value="Add to my favorites" class="fs-6 btn btn-success mb-3 p-2" style="border-color:black" />
                    </form>
                }
            </div>
        }
    }
</div>