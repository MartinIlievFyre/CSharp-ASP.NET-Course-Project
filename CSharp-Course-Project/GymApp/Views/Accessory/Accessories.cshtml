@model IEnumerable<AccessoryViewModel>
@{
    ViewBag.Title = "Accessories";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        @foreach (var accessory in Model)
        {
            <div class="col-lg-4">
                <a class="navbar-brand" asp-area="" asp-controller="Accessory" asp-action="AccessoryDetails" asp-route-id="@accessory.Id">
                    <img src="@accessory.ImageUrl" alt="@accessory.Name" style="width:100%;">
                    <h5 style="color:black">@accessory.Name - @accessory.Manufacturer</h5>
                    <h5 style="color:black">@accessory.Price<font>BGN</font></h5>
                </a>
                <form class="input-group-sm text-lg-end" asp-controller="Cart" asp-action="AddToCart" asp-route-name="@accessory.Name" asp-route-typeOfProduct="@accessory.Type">
                    <button type="submit" class="fs-6 btn btn-success mb-2 p-3 btn-success buy-button" style="border-color:black">Buy Now</button>
                </form>
            </div>
        }
    </div>
</div>

