@model IEnumerable<WearViewModel>
@{
    ViewBag.Title = "Clothing";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        @foreach (var clothing in Model)
        {
            <div class="col-lg-4">
                <a class="navbar-brand" asp-area="" asp-controller="Clothing" asp-action="ClothingDetails" asp-route-id="@clothing.Id">
                    <img src="@clothing.ImageUrl" alt="@clothing.Name" style="width:100%;">
                    <h5 style="color:black">@clothing.Name</h5>
                    <h5 style="color:black">@clothing.Price<font>BGN</font></h5>
                </a>
                <form class="input-group-sm text-lg-end" asp-controller="Clothing" asp-action="AddProductToCart" asp-route-id="@clothing.Id">
                    <button type="submit" class="fs-6 btn btn-success mb-2 p-3 btn-success buy-button" style="border-color:black">Buy Now</button>
                </form>
            </div>
        }
    </div>
</div>
