<style>
    .styled-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

        .styled-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }

        .styled-table th,
        .styled-table td {
            padding: 12px 15px;
        }

        .styled-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .styled-table tbody tr:nth-of-type(odd) {
                background-color: #b5f59a;
            }

            .styled-table tbody tr:nth-of-type(even) {
                background-color: #f3f3f3;
            }

            .styled-table tbody tr:last-of-type {
                border-bottom: 2px solid #009879;
            }

            .styled-table tbody tr.active-row {
                font-weight: bold;
                color: #009879;
            }

    .styled-table-items {
        border-collapse: collapse;
        margin: 1px 0;
        font-size: 0.9em;
        font-family: sans-serif;
        min-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

        .styled-table-items thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
        }

        .styled-table-items th,
        .styled-table-items td {
            padding: 12px 15px;
        }

        .styled-table-items tbody tr {
            border-bottom: 1px solid #dddddd;
        }

            .styled-table-items tbody tr:nth-of-type(1) {
                background-color: #b5f59a;
            }

            .styled-table-items tbody tr:last-of-type {
                border-bottom: 2px solid #009879;
            }

            .styled-table-items tbody tr.active-row {
                font-weight: bold;
                color: #009879;
            }
</style>
@model IEnumerable<FoodViewModel>
@{
    ViewBag.Title = "Calories";
    int calories = 0;
    double carbs = 0;
    double fat = 0;
    double protein = 0;
}

<div class="text-center row">
    @foreach (var food in Model)
    {
        calories += food.Calories;
        carbs += food.Carbs;
        fat += food.Fat;
        protein += food.Protein;
    }
    <table class="styled-table" style="width:100%">
        <tr>
            <th><h1>Calories:</h1></th>
            <th><h1>Carbs:</h1></th>
            <th><h1>Fat:</h1></th>
            <th><h1>Protein:</h1></th>
        </tr>
        <tr>
            <td><h1>@calories</h1></td>
            <td><h1>@String.Format("{0:0.#}", carbs)</h1></td>
            <td><h1>@String.Format("{0:0.#}", fat)</h1></td>
            <td><h1>@String.Format("{0:0.#}", protein)</h1></td>
        </tr>
    </table>
    <form class="input-group-sm" asp-controller="Calculator" asp-action="AddProductToList">
        <input type="submit" value="Add product" class="fs-6 btn btn-success mb-2 p-3 btn-" style="width:70%; border-color:black" />
    </form>
    <table class="styled-table-items" style="width:100%">
        <tr>
            <th><h1>Foods:</h1></th>
            <th></th>
        </tr>
        @foreach (var food in Model)
        {
            <tr>
                <td><h3 class="text-lg-start">@food.Name - Cal: @food.Calories Carbs: @food.Carbs Fat: @food.Fat Protein: @food.Protein</h3></td>
                <td>
                    <form class="input-group-sm" asp-controller="Calculator" asp-action="RemoveFromFoodList" asp-route-id="@food.Id,">
                        <input type="submit" value="Remove" class="fs-6 btn btn-success mb-3 p-2 btn-danger" style="margin-top:20px; margin-bottom:20px;font-weight: 700; border-color:black" />
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
