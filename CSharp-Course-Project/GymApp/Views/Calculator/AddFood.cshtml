@model AddFoodViewModel
@{
    ViewBag.Title = "Add Food";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddFood" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name:</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Calories" class="form-label">Calories:</label>
                <input asp-for="@Model.Calories" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Calories" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Carbs" class="form-label">Carbs:</label>
                <input asp-for="@Model.Carbs" class="form-control" aria-required="true" />
                <span asp-validation-for="Carbs" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Fat" class="form-label">Fat:</label>
                <input asp-for="@Model.Fat" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Fat" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Protein" class="form-label">Protein:</label>
                <input asp-for="@Model.Protein" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Protein" class="text-danger"></span>
            </div>
            <div class="mb-3 text-lg-center">
                <input class="btn btn-lg mt-3 createFood-button btn-info" style="width:360px; height:90px; font-size:40px;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" type="submit" value="Create" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}