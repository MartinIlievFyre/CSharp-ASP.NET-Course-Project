@model IEnumerable<SupplementViewModel>
@{
    ViewBag.Title = "Supplements";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        @foreach (var supplement in Model)
        {
            <div class="col-lg-4">
                <a class="navbar-brand" asp-area="" asp-controller="Supplement" asp-action="SupplementDetails" asp-route-id="@supplement.Id">
                    <img src="@supplement.ImageUrl" alt="@supplement.Name" style="width:100%;">
                    <h5 style="color:black">@supplement.Name - @supplement.Manufacturer</h5>
                    <h5 style="color:black">@supplement.Price<font>BGN</font></h5>
                </a>

                <form class="input-group-sm text-lg-end" asp-controller="Cart" asp-action="AddToCart" asp-route-name="@supplement.Name" asp-route-typeOfProduct="@supplement.Type">
                    <button type="submit" class="fs-6 btn btn-success mb-2 p-3 btn-success buy-button" style="border-color:black">Buy Now</button>
                </form>
            </div>
        }
    </div>
</div>
