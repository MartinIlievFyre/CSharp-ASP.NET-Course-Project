@using GymApp.Data.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="margin-right: 1rem;">
            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="MyCartItems"><img style="margin-right: 1rem;" width="40" height="40" src="https://img.icons8.com/pastel-glyph/64/shopping-cart--v1.png" alt="shopping-cart--v1" /></a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style=" font-family: Trebuchet MS"><i class="fa fa-user-circle" style="font-size: 40px; margin-right: 1rem;" aria-hidden="true"></i></a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark" style="font-family: Trebuchet MS">LOGOUT</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login"><p style="font-family: Trebuchet MS">Login</p></a>
    </li>
}
</ul>
