@model IEnumerable<ExerciseViewModel>
@{
    ViewBag.Title = "My favorite exercises";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<body>
    <div class="text-center row">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="LegsExercises"><h3>Legs</h3></a>
                            </li>
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="BackExercises"><h3>Back</h3></a>
                            </li>
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="ChestExercises"><h3>Chest</h3></a>
                            </li>
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="TricepsExercises"><h3>Triceps</h3></a>
                            </li>
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="BicepsExercises"><h3>Biceps</h3></a>
                            </li>
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="ForearmsExercises"><h3>Forearms</h3></a>
                            </li>
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="ShouldersExercises"><h3>Shoulders</h3></a>
                            </li>
                            <li class="nav-item" style="margin-right: 4rem;">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MyFavoriteExercises" asp-action="AbsExercises"><h3>Abs</h3></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>
</body>
