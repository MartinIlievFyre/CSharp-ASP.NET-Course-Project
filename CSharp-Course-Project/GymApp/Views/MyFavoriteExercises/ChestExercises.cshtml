@model IEnumerable<ExerciseViewModel>
@{
    ViewBag.Title = "My favorite chest exercises";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var exercise in Model)
    {
        @if (exercise.Category == "Chest")
        {
            <div class="card col-4" style="width: 20rem; ">
                <img class="card-img-top" style="width: 18rem;"
                     src="@exercise.ImageUrl" alt="Book Image">
                <div class="card-body">

                    <h5 class="card-title mt-1">@exercise.Name</h5>
                    <p class="mb-0">Execution: @exercise.Execution</p>
                    <p class="mb-0">Benefits: @exercise.Benefit</p>
                    <p>Category: @exercise.Category</p>
                </div>

                <form class="input-group-sm" asp-controller="MyFavoriteExercises" asp-action="RemoveFromMyFavorites" asp-route-id="@exercise.Id">
                    <input type="submit" value="Remove from my favorites" class="fs-6 btn btn-success mb-3 p-2 btn-danger" style="border-color:black" />
                </form>
            </div>
        }
    }
</div>
