@model AddExerciseViewModel
@{
    ViewBag.Title = "Add Exercise";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="AddExercise" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name:</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Execution" class="form-label">Execution:</label>
                <input asp-for="@Model.Execution" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Execution" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Benefit" class="form-label">Benefits:</label>
                <textarea asp-for="@Model.Benefit" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Benefit" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL:</label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label">Category:</label>
                <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                    @foreach (var category in @Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}