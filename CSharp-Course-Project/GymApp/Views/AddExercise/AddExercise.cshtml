@model AddExerciseViewModel
@{
    ViewBag.Title = "Add Exercise";
}

<h2 class="text-center display-4 font-weight-bold">@ViewBag.Title</h2>
<hr />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="AddExercise" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name:</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" placeholder="Bicep Curl" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Execution" class="form-label">Execution:</label>
                    <textarea asp-for="@Model.Execution" class="form-control" aria-required="true" rows="5" placeholder="Execution of exercise..."></textarea>
                    <span asp-validation-for="@Model.Execution" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Benefit" class="form-label">Benefits:</label>
                    <textarea asp-for="@Model.Benefit" class="form-control" aria-required="true" rows="5" placeholder="Benefits from exercise..."></textarea>
                    <span asp-validation-for="Benefit" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageUrl" class="form-label">Image URL:</label>
                    <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="Link for image" />
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label">Category:</label>
                    <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                        @foreach (var category in @Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3 text-center">
                    <input class="btn btn-lg mt-3 addExercise-button btn-info" style="width:275px; height:90px; font-size:40px;font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;" type="submit" value="Add Exercise" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
