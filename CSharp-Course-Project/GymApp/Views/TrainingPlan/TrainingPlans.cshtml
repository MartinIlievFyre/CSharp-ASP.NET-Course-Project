@{
    ViewData["Title"] = "All my training plans";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymApp.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansLegs"><h3>Legs</h3></a>
                        </li>
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansBack"><h3>Back</h3></a>
                        </li>
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansChest"><h3>Chest</h3></a>
                        </li>
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansTriceps"><h3>Triceps</h3></a>
                        </li>
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansBiceps"><h3>Biceps</h3></a>
                        </li>
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansForearms"><h3>Forearms</h3></a>
                        </li>
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansShoulders"><h3>Shoulders</h3></a>
                        </li>
                        <li class="nav-item" style="margin-right: 4rem;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TrainingPlan" asp-action="TrainingPlansAbs"><h3>Abs</h3></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
</body>
</html>