@model IEnumerable<TrainingPlanViewModel>
@{
    ViewBag.Title = "Training plans for abs";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var trainingPlan in Model)
    {
        @if (trainingPlan.Category == "Abs")
        {
            <div class="card col-4" style="width: 20rem; ">
                <div class="card-body">

                    <h5 class="card-title mt-1">@trainingPlan.Name</h5>
                    <hr>
                    <p class="mb-0">Description: @trainingPlan.Description</p>
                    <hr>
                    <p>Category: @trainingPlan.Category</p>
                </div>
                <form class="input-group-sm" asp-controller="TrainingPlan" asp-action="RemoveTrainingPlan" asp-route-id="@trainingPlan.Id">
                    <input type="submit" value="Delete" class="fs-6 btn btn-success mb-3 p-2 btn-danger" style="border-color:black" />
                </form>
            </div>
        }
    }
</div>