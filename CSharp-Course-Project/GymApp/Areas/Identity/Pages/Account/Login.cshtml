@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="vh-100" style="background-color: white;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem; background-color: #ededed;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://i.pinimg.com/1200x/5e/8d/59/5e8d59e48b494dcca894b3e739249ea0.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form id="account" method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <img width="59" style="color: #3F888F;" height="59" src="https://img.icons8.com/external-smashingstocks-hand-drawn-black-smashing-stocks/99/external-dumbell-sports-and-awards-smashingstocks-hand-drawn-black-smashing-stocks-2.png" alt="external-dumbell-sports-and-awards-smashingstocks-hand-drawn-black-smashing-stocks-2" />
                                        <span class="h1 fw-bold mb-0">Hardcore Gym</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.Email" autocomplete="username" aria-required="true" class="form-control form-control-lg" />
                                        <label asp-for="Input.Email" class="form-label">Email address</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" class="form-control form-control-lg" />
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button id="login-submit" type="submit" class="btn btn-dark btn-lg btn-block" style="background-color: #3F888F;">Login</button>
                                    </div>

                                    <a id="forgot-password" asp-page="./ForgotPassword" style="color: #3F888F;">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2">
                                        Don't have an account?
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #3F888F;">Register here!</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}

