@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<section class="vh-100" style="background-color: white;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px; background-color: #ededed;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mx-1 mx-md-4">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <img width="30" height="30" src="https://img.icons8.com/wired/64/employee-card.png" alt="employee-card" style="margin-right:10px; margin-bottom:20px;" />
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
                                            <label asp-for="Input.Name">Username</label>
                                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <img width="30" height="30" src="https://img.icons8.com/carbon-copy/100/new-post--v1.png" alt="new-post--v1" style="margin-right:10px; margin-bottom:20px;" />
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                                            <label asp-for="Input.Email">Email</label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <img width="30" height="30" src="https://img.icons8.com/ios/50/private2.png" alt="private2" style="margin-right:10px; margin-bottom:20px;" />
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" />
                                            <label asp-for="Input.Password">Password</label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <img width="30" height="30" src="https://img.icons8.com/ios/50/private2.png" alt="private2" style="margin-right:10px; margin-bottom:20px;" />
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="confirm-password" aria-required="true" />
                                            <label asp-for="Input.ConfirmPassword">Repeat your password</label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-check d-flex justify-content-center mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                                        <label class="form-check-label" for="form2Example3">
                                            I agree all statements in <a href="#!">Terms of service</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg" style="background-color: #3F888F;">Register</button>
                                    </div>
                                    

                                </form>

                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}